<resources>
    <!-- Base application theme. -->
    <style name="Theme.Test3" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Surface color. -->
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <!-- Error color. -->
        <item name="colorError">@color/red_200</item>
        <item name="colorOnError">@color/white</item>
        <!-- Background color. -->
        <item name="colorOnBackground">@color/black</item>
        <!-- Custom attributes for SearchBar. -->
        <item name="colorOnSurfaceVariant">@color/colorOnSurfaceVariant</item>
        <item name="colorSurfaceContainerHigh">@color/colorSurfaceContainerHigh</item> <!-- Added colorSurfaceContainerHigh -->
    </style>

    <style name="Theme.Test3.NoActionBar" parent="Theme.Test3">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>